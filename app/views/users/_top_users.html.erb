<div class="border border-color-primary rounded-primary mb-4">
  <div class="bg-primary rounded-t-md border-b border-color-primary padding-primary">
    <h3 class="mr-2 text-lg leading-6 font-medium text-gray-900 py-2">
      <%= t("top_users") %>
    </h3>
  </div>
  <div class="padding-primary grid grid-cols-8 gap-2">
    <% User.with_attached_avatar.order(score: :desc).limit(48).each do |user| %>
      <div class="" data-controller="userhover" >
        <%= link_to image_tag(user.avatar_url, title: user.username, loading: 'lazy', alt: user.username, class: "h-7 w-7 rounded-full"), user_path(user), class: 'flex justify-center' %>
      </div>
    <% end %>
  </div>
</div>
