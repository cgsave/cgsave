                                        <a style="color: #0690FA; font-weight: bold; text-decoration:none;"
                                          href="<%= bookmark_url(bookmark) %>"><%= bookmark.title %></a>
                                        <div style="font-size: 11px;line-height: 15px;color: grey;">
                                          <%= bookmark.cached_tag_names %></div>
                                        <%= bookmark.pinned_comment&.comment %>
                                      </td>
                                    </tr>
                                  </tbody>
                                </table>
                                <% end %>

                              </div>
                            </td>
                          </tr>
                        </table>
