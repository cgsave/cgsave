                                            <img role="social-icon" alt="Twitter" title="Twitter " height="30" width="30"
                                              style="height: 30px, width: 30px"
                                              src="https://marketing-image-production.s3.amazonaws.com/social/white/twitter.png" />
                                          </a>
                                        </td>

                                        <td style="padding: 0px 5px;">
                                          <a role="social-icon-link" href="https://github.com/cgsave" target="_blank"
                                            alt="Github" data-nolink="false" title="Github "
                                            style="-webkit-border-radius:2px;-moz-border-radius:2px;border-radius:2px;display:inline-block;background-color:#0077B5;">
                                            <img role="social-icon" alt="Github" title="Github " height="30" width="30"
                                              style="height: 30px, width: 30px"
                                              src="https://img.stackshare.io/service/27/sBsvBbjY.png" />
                                          </a>
                                        </td>
                                      </tr>
                                    </tbody>
                                  </table>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                          <div style="font-size: 10px; line-height: 150%; margin-top: 12px; text-align: right;">
                            <a href="<%= setting_users_url %>"><span>Unsubscribe</span></a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
